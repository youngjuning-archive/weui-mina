.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 128rpx;
  width: 100%;
  padding-top: 20rpx;
  box-sizing: border-box;
}

.userinfo-avatar,.userinfo-avatar>image {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
